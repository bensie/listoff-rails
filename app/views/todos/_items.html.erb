<table id="items" border="0" cellpadding="0" cellspacing="0">
<% items.each do |item| -%>
  <tr id="<%= dom_id(item) %>">
    <td class="name">
      <%= link_to item.content, 
                  edit_todo_item_path(item.todo, item) %>
    </td>
    <td align="amount">
      <%#= number_to_currency(item.amount) %>
    </td>
    <td>
      <%= link_to_remote 'x', { :url => todo_item_url(todo, item), 
                                :confirm => 'Are you sure?', 
                                :method => :delete
                              }, :class => 'destructive' %>
    </td>
  </tr>
<% end -%>
</table>